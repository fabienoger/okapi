<% @menu_categories.each do |categorie| %>
  <% if params[:id].to_i == categorie["id"] %>
    <h2><%= categorie["title"].split(" ")[2] %></h2>
  <% end %>
<% end %>
<div class="row">
  <% @articles.each do |article| %>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= article["title"] %></span>
          <p class="content"><%= article["content"][0..140] %>...</p>
          <% @menu_categories.each do |categorie| %>
            <% if article["category_id"] == categorie["id"] %>
              <div class="chip"><%= categorie["title"].split(" ")[2] %></div>
            <% end %>
          <% end %>
        </div>
        <div class="card-action">
          <a href="/category/<%= article["category_id"] %>/read/<%= article["id"] %>">Lire l'article</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
