<div class="col s12 m12 l12">
  <div class="big-title">
    <h2 class="center-align">On se dit tout :)</h2>
    <span class="by right red-text accent-4">by Okapi</span>
  </div>
  <!--<a class="center-align" href="/loosingtime"><h4>J'ai 5 minutes à perdre</h4></a>-->
</div>
<%= form_tag '/search', method: 'post', class: "col s12 m12 l12" do %>
  <input type="text" name="search" placeholder="Mot clé" autofocus />
  <input type="submit" value="Rechercher" class="btn red accent-4" />
<% end %>

<div class="col s12 m12 l12">
  <div class="row article">
    <% @articles.each do |article| %>
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= article["title"] %></span>
            <p class="content"><%= article["content"][0..140] %>...</p>
            <% @ask_categories.each do |categorie| %>
              <% if article["category_id"] == categorie["id"] %>
                <div class="chip"><%= categorie["title"].split(" ")[2] %></div>
              <% end %>
            <% end %>
          </div>
          <div class="card-action">
            <a href="/category/<%= article["category_id"] %>/read/<%= article["id"] %>">Lire l'article</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
