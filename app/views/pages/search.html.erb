<% if flash[:success] %>
  <div class="card-panel green accent-1">
    <span class="green-text accent-4"><%= flash[:success] %></span>
  </div>
<% end %>
<% if flash[:error] %>
  <div class="card-panel green accent-1">
    <span class="green-text accent-4"><%= flash[:error] %></span>
  </div>
<% end %>

<%= form_tag '/search', method: 'post', class: "col s12 m12 l12" do %>
  <input type="text" name="search" placeholder="Mot clé" value="<% if @search %><%= @search %><% end %>" />
  <input type="submit" value="Rechercher" class="btn red accent-4" />
<% end %>
<div class="col s12 m12 l12">
  <% if @result %>
    <h2>Dernière recherche : <strong><%= @search %></strong></h2>
    <% if @result.length > 0 %>
      <div class="card-panel green accent-1">
        <span class="green-text accent-4">Yes (<%= @result.length %>)</span>
     </div>
    <% else %>
      <div class="card-panel red accent-1">
        <span class="red-text accent-4">No (<%= @result.length%>)</span>
      </div>
    <% end %>
    <ul>
      <% @result.each do |resultat| %>
        <li class="card-panel col s4  m4  l4 ">
          <h5><a href="/showkeyword/<%= resultat.id%>"><%= resultat.keyword %></a></h5>
          <%= form_tag "/keyword/#{resultat.id}/mark", method: "post" do%>
              <% 5.times do |iteration| %>
                <input type="hidden" name="keyword_id" value="<%= resultat.id %>">
                <% if resultat.keyword_mark.where(:user_id => current_user).length > 0 && resultat.keyword_mark.where(:user_id => current_user).first.note == iteration + 1 %>
                  <input type="submit" class="btn-floating blue accent-4" class="keyword-mark" name="note" value="<%= iteration+1 %>" />
                <% else %>
                <input type="submit" class="btn-floating red accent-4" class="keyword-mark" name="note" value="<%= iteration+1 %>" />
                <% end %>
              <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%if @googleSearch %>
    <a class="btn" href="<%= @googleSearch %>"><i class="left material-icons">language</i>Faire une recherche sur Google !</a>
  <% end %>
</div>
<div class="col s12 m12 l12">
</div>
